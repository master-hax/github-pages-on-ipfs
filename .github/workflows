name: IPFS publishing

on:
  push:
    branches: [ master ]

  workflow_dispatch:

jobs:
  # This workflow contains a single job called "build"
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: upload to IPFS
        uses: aquiladev/ipfs-action@v0.2.0
        with:
          path: ${{ github.workspace }}
